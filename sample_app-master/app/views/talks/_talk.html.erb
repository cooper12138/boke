<li id="talk-<%= talk.id %>">
  <%= link_to gravatar_for(talk.user,size: 50),talk.user %>
  <span class="user"><%= link_to talk.user.name,talk.user %></span>
  <span class="content"><%= talk.content %></span>
  <span class="timestamp">
    评论于<%= time_ago_in_words(talk.created_at) %>前
  </span>
</li>